<!-- Majordomo command format file -->
<h4 align="center">Formulaire de commandes de Majordomo</h4>
<form method="POST" action="$CGIURL">
<input type="hidden" name="command" value="on">
<input type="hidden" name="user" value="$USER">
<table>
<tr>
  <td>
    Commande&nbsp;:&nbsp;&nbsp;
    <select name=func>
      <option>help</option>
      <option>accept</option>
      <option>archive-get</option>
      <option>archive-index</option>
      <option>archive-stats</option>
      <option>configdef</option>
      <option>configset</option>
      <option>configshow</option>
      <option>digest-force</option>
      <option>digest-incvol</option>
      <option>digest-status</option>
      <option>get</option>
      <option>get-edit</option>
      <option>index-recursive</option>
      <option>reject</option>
      <option>report</option>
      <option>report-full</option>
      <option>report-summary</option>
      <option>sessioninfo</option>
      <option>set</option>
      <option>showtokens</option>
      <option>subscribe</option>
      <option>subscribe-nowelcome</option>
      <option>tokeninfo</option>
      <option>unregister</option>
      <option>unsubscribe</option>
      <option>unsubscribe-farewell</option>
      <option>which</option>
      <option>who</option>
      <option>who-bounce</option>
    </select>
  </td>
  <td colspan=2>
    <input size=40 name=extra value="">
  </td>
