      <option value="2d">les deux derniers jours
      <option value="7d">la semaine derniere
      <option value="14d">les deux dernieres semaines
      <option value="30d">les 30 derniers jours
    </select>
    <input type="submit" name="func" value="report">
  </form>
  </td>
